        gap: 20px;
      }

      .nav-menu.active {
        right: 0;
      }

      .hero h1 {
        font-size: 32px;
      }

      .hero p {
        font-size: 16px;
      }

      .section-title {
        font-size: 28px;
      }

      .footer-container {
        grid-template-columns: 1fr;
      }
    }
  </style>
