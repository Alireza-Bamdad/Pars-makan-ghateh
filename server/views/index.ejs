      font-size: 16px;
      font-weight: 600;
      color: #2c3e50;
    }

    /* Products Section */
    .products-section {
      padding:20px 12px;
      background: white;
    }

    .products-container {
      max-width: 1200px;
      margin: 0 auto;
      overflow-x: auto;
      overflow-y: hidden;
      padding: 20px 0;
      scrollbar-width: thin;
      scrollbar-color: #667eea #f0f0f0;
    }

    .products-container::-webkit-scrollbar {
      height: 8px;
    }

    .products-container::-webkit-scrollbar-track {
      background: #f0f0f0;
      border-radius: 10px;
    }

    .products-container::-webkit-scrollbar-thumb {
      background: #667eea;
      border-radius: 10px;
    }

    .products-scroll {
      display: flex;
      gap: 25px;
      padding: 10px;
    }

    .product-card {
      flex: 0 0 280px;
      background: white;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
      transition: all 0.3s;
      cursor: pointer;

    }


    .product-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .product-image {
