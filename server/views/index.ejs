    /* Responsive */
    @media (max-width: 768px) {
      .menu-toggle {
        display: block;
      }

      .nav-menu {
        position: fixed;
        top: 70px;
        right: -100%;
        width: 100%;
        max-width: 300px;
        background: white;
        flex-direction: column;
        padding: 30px;
        box-shadow: -5px 0 20px rgba(0, 0, 0, 0.1);
